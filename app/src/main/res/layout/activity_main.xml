<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Nombre usuario -->
    <TextView
        android:id="@+id/tvNombreUsuario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Alisss_"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/imgPerfil"
        android:layout_marginEnd="12dp"/>

    <!-- Icono perfil -->
    <ImageView
        android:id="@+id/imgPerfil"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:src="@drawable/baseline_person_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Subtítulo -->
    <TextView
        android:id="@+id/tvComunidad"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Comunidad FectPet"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/tvNombreUsuario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ACTION BAR HORIZONTAL -->
    <HorizontalScrollView
        android:id="@+id/hsOpciones"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvComunidad"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All"/>

            <Button
                android:id="@+id/btnAdopciones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Adopciones"/>

            <Button
                android:id="@+id/btnPerdidos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Lost"/>

            <Button
                android:id="@+id/btnMapa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Mapa"/>
        </LinearLayout>
    </HorizontalScrollView>

    <!-- CONTENIDO -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollContenido"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="14dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/hsOpciones"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- MENSAJE CUANDO NO HAY NADA -->
            <TextView
                android:id="@+id/tvNadaSeleccionado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No hay contenido disponible"
                android:gravity="center"
                android:textSize="16sp"
                android:visibility="gone"
                android:layout_marginTop="24dp"/>

            <!-- ====== SECCIÓN PERDIDOS ====== -->
            <LinearLayout
                android:id="@+id/sectionPerdidos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Recientemente"
                    android:textStyle="bold"
                    android:textSize="16sp"/>
            </LinearLayout>

            <!-- ====== SECCIÓN ADOPCIONES ====== -->
            <LinearLayout
                android:id="@+id/sectionAdopciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Adopciones"
                    android:textStyle="bold"
                    android:textSize="16sp"/>
            </LinearLayout>

            <!-- ====== SECCIÓN VETERINARIAS / MAPA ====== -->
            <LinearLayout
                android:id="@+id/sectionVeterinarias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mapa / Veterinarias"
                    android:textStyle="bold"
                    android:textSize="16sp"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
