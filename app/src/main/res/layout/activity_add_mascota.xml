<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Tipo de mascota -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo de mascota"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/cbPerro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perro" />

        <CheckBox
            android:id="@+id/cbGato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gato" />

        <!-- Estado -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <CheckBox
            android:id="@+id/cbAdopcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="En adopción" />

        <CheckBox
            android:id="@+id/cbPerdido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perdido" />

        <!-- Chip -->
        <EditText
            android:id="@+id/etChip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Número de chip"
            android:layout_marginTop="16dp"
            android:inputType="text" />

        <!-- Info adicional -->
        <EditText
            android:id="@+id/etInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Información adicional"
            android:layout_marginTop="8dp"
            android:inputType="textMultiLine"
            android:minLines="3" />

        <!-- Botón guardar -->
        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar mascota"
            android:layout_marginTop="24dp" />

    </LinearLayout>
</ScrollView>
